{
  "name": "doctor-rest",
  "version": "0.0.1",
  "description": "Generic proxy for REST-ful APIs with advanced query language and MQTT push.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node --harmony_arrow_functions lib/index.js",
    "lint": "./node_modules/jshint/bin/jshint lib test",
    "test": "SECRET=much MONGO_MAIN_DB=doctor_test PORT_OFFSET=1 node --harmony_arrow_functions ./node_modules/mocha/bin/_mocha -G --require co-mocha",
    "pretest": "npm run lint",
    "forever": "./node_modules/nodemon/bin/nodemon.js --exec npm start",
    "forever-test": "./node_modules/nodemon/bin/nodemon.js --exec npm test"
  },
  "keywords": [
    "REST",
    "MQTT",
    "Push",
    "Proxy"
  ],
  "author": "Martin Betak <matobet@gmail.com>",
  "license": "Apache 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/matobet/doctor"
  },
  "dependencies": {
    "co": "^4.4.0",
    "koa": "^0.18.1",
    "koa-bodyparser": "^1.4.1",
    "koa-logger": "^1.2.2",
    "koa-route": "^2.4.0",
    "lodash": "^3.6.0",
    "mongodb": "^1.4.35",
    "monk": "^1.0.0",
    "mosca": "^0.28.1",
    "pegjs": "^0.8.0"
  },
  "engines": {
    "iojs": "2.x"
  },
  "devDependencies": {
    "chai": "^2.1.1",
    "co-mocha": "^1.1.0",
    "co-supertest": "0.0.8",
    "jshint": "^2.6.3",
    "mocha": "^2.2.1",
    "mqtt": "^1.1.2",
    "nodemon": "^1.3.7",
    "supertest": "^0.15.0"
  }
}
