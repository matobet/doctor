{
  "name": "doctor-rest",
  "version": "0.0.1",
  "description": "Generic proxy for REST-ful APIs with advanced query language and MQTT push.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node lib/index.js",
    "lint": "eslint lib test",
    "test": "SECRET=much MONGO_MAIN_DB=doctor_test PORT_OFFSET=1 istanbul cover --dir .coverage _mocha -- -G --require co-mocha",
    "pretest": "npm run lint",
    "forever": "./node_modules/nodemon/bin/nodemon.js --exec npm start",
    "forever-test": "./node_modules/nodemon/bin/nodemon.js --exec npm test",
    "coveralls": "cat .coverage/lcov.info | coveralls"
  },
  "keywords": [
    "REST",
    "MQTT",
    "Push",
    "Proxy"
  ],
  "author": "Martin Betak <matobet@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/matobet/doctor"
  },
  "dependencies": {
    "co": "^4.6.0",
    "glob-to-regexp": "^0.1.0",
    "koa": "^1.2.0",
    "koa-bodyparser": "^2.0.1",
    "koa-compress": "^1.0.9",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.4.0",
    "lodash": "^4.10.0",
    "monk": "^1.0.1",
    "mosca": "^1.1.3",
    "pegjs": "^0.9.0"
  },
  "engines": {
    "node": ">=4.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "co-mocha": "^1.1.2",
    "co-supertest": "0.0.10",
    "coveralls": "^2.11.9",
    "eslint": "^2.7.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "mqtt": "^1.8.0",
    "nodemon": "^1.9.1",
    "proxyquire": "^1.7.4",
    "standard": "^6.0.8",
    "supertest": "^1.2.0"
  }
}
