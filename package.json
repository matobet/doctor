{
  "name": "doctor-rest",
  "version": "0.0.1",
  "description": "Generic proxy for REST-ful APIs with advanced query language and MQTT push.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node lib/index.js",
    "lint": "jshint lib test && ./node_modules/standard/bin/cmd.js",
    "test": "SECRET=much MONGO_MAIN_DB=doctor_test PORT_OFFSET=1 istanbul cover --dir .coverage _mocha -- -G --require co-mocha",
    "pretest": "npm run lint",
    "forever": "./node_modules/nodemon/bin/nodemon.js --exec npm start",
    "forever-test": "./node_modules/nodemon/bin/nodemon.js --exec npm test",
    "coveralls": "cat .coverage/lcov.info | coveralls"
  },
  "keywords": [
    "REST",
    "MQTT",
    "Push",
    "Proxy"
  ],
  "author": "Martin Betak <matobet@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/matobet/doctor"
  },
  "dependencies": {
    "co": "^4.6.0",
    "glob-to-regexp": "^0.1.0",
    "koa": "^1.1.2",
    "koa-bodyparser": "^2.0.1",
    "koa-compress": "^1.0.8",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.3.0",
    "lodash": "^3.10.1",
    "monk": "^1.0.1",
    "mosca": "^0.32.1",
    "pegjs": "^0.9.0"
  },
  "engines": {
    "node": ">=4.0"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "co-mocha": "^1.1.2",
    "co-supertest": "0.0.10",
    "coveralls": "^2.11.6",
    "istanbul": "^0.4.1",
    "jshint": "^2.8.0",
    "mocha": "^2.3.4",
    "mqtt": "^1.6.3",
    "nodemon": "^1.8.1",
    "proxyquire": "^1.7.3",
    "standard": "^5.4.1",
    "supertest": "^1.1.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "should",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  }
}
