{
  "name": "doctor-rest",
  "version": "0.0.1",
  "description": "Generic proxy for REST-ful APIs with advanced query language and MQTT push.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node lib/index.js",
    "lint": "./node_modules/jshint/bin/jshint lib test",
    "test": "SECRET=much MONGO_MAIN_DB=doctor_test PORT_OFFSET=1 mocha -G --require co-mocha",
    "pretest": "npm run lint",
    "forever": "./node_modules/nodemon/bin/nodemon.js --exec npm start",
    "forever-test": "./node_modules/nodemon/bin/nodemon.js --exec npm test"
  },
  "keywords": [
    "REST",
    "MQTT",
    "Push",
    "Proxy"
  ],
  "author": "Martin Betak <matobet@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/matobet/doctor"
  },
  "dependencies": {
    "co": "^4.6.0",
    "glob-to-regexp": "^0.1.0",
    "koa": "^1.0.0",
    "koa-bodyparser": "^2.0.0",
    "koa-compress": "^1.0.8",
    "koa-logger": "^1.3.0",
    "koa-route": "^2.4.2",
    "lodash": "^3.10.1",
    "mongodb": "^2.0.40",
    "monk": "^1.0.1",
    "mosca": "^0.32.0",
    "pegjs": "^0.9.0"
  },
  "engines": {
    "node": ">=4.0"
  },
  "devDependencies": {
    "chai": "^3.2.0",
    "co-mocha": "^1.1.2",
    "co-supertest": "0.0.10",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "mqtt": "^1.3.5",
    "nodemon": "^1.4.0",
    "proxyquire": "^1.7.2",
    "supertest": "^1.0.1"
  }
}
